#include<iostream>
using namespace std;
int main()
    {
    int n,k,a[100],c=0,i,j,s;
    cin>>n>>k;
    for(i=0;i<n;i++)
        cin>>a[i];
    for(i=0;i<n;i++)
        {
        for(j=i+1;j<n-1;j++)
            {
            s=a[i]+a[j];
            if(s%k==0)
                c++;
            cout<<"check";
            
        }
    }
    cout<<c;
    return 0;
    
    
}
